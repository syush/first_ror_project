<p id="notice"><%= notice %></p>

<h1 class="page_name">Все публикации</h1>

<% @posts.each do |post| %>
  <h3><%= link_to post.title, post%></h3>
  <p><%= truncate(post.body, length:100) %></p>
  <p><%= link_to 'Читать далее...', post %></p>
  <br>
<% end %>


