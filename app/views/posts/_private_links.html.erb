<% if have_rights_for?(post) %>
    <%= link_to 'Редактировать', edit_post_path(post) %>&nbsp&nbsp
    <%= link_to "Удалить", post, method: :delete, data:{confirm:"Вы уверены, что хотите удалить публикацию?"}%>&nbsp&nbsp
    <% if post.published %>
        <%= link_to 'Убрать в черновики', unpublish_post_path(post),
                    data:{confirm:"Вы уверены, что хотите убрать публикацию с сайта и поместить в черновики?"} %>&nbsp&nbsp
    <% else %>
        <%= link_to 'Опубликовать', publish_post_path(post),
                    data:{confirm:"Вы уверены, что хотите сделать публикацию доступной для всех?"} %>&nbsp&nbsp
    <% end %>
<% end %>
